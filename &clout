FTN4,X
        PROGRAM CLOUT(3,3)
     .,C#900305:19:40    CLEAR CLASS OUTPUT BUFFER V=1.0# 
        DIMENSION IREG(2),IP(5) 
        EQUIVALENCE (REG,IREG(1),IRGA),(IREG(2),IRGB) 
C 
C               GET THE CLASS TO BE WORKED ON 
C 
        CALL RMPAR(IP)
C 
C               SET THE DO NOT DE-ALLOCATE CLASS BIT
C 
        ICLOUT=IOR(IP(1),20000B)
C 
1000    CONTINUE
C 
C               GET THE BUFFER TO FREE SAM
C 
        REG=EXEC(21,ICLOUT,IBUFF,-2,IR1,IR2,IR3)
C 
C               CHECK FOR THE END USE OF CLASS INDICATOR
C 
        IF(IR2 .NE. -1)GO TO 1000 
C 
C               RESET DO NOT DEALLOCATE AND SET NO WAIT 
C 
        ICLOUT=IOR(IAND(ICLOUT,117777B),100000B)
C 
C               DEALLOCATE THE CLASS NUMBER (IT SHOULD BE EMPTY)
C 
        CALL EXEC(21,ICLOUT,IBUFF,-2,IR1,IR2,IR3) 
C 
C               GET OUR ID ADDRESS
C 
        IDAD=IGID(6HCLOUT ) 
C 
C               IF NOT IN SYSTEM VANISH 
C 
        CALL IDOFF(IGID(6HCLOUT ))
C 
        END 

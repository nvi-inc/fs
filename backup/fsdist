# make distribution floppy for version 8.2, execute by root
#
echo "Removing old /tmp/fsdist directory"
rm -rf /tmp/fsdist
mkdir /tmp/fsdist
#
echo "Making file list"
cd /usr2
find fs  -type d -print > /tmp/fsdist/FSS
find fs \! -name '*.o' \! -name '*.a' \! -perm -1 -print >> /tmp/fsdist/FSS
find fs/st.default -perm -1 ! -type d -print >> /tmp/fsdist/FSS
#
echo "Making cpio archive"
ulimit 409600
cat /tmp/fsdist/FSS | cpio -oc >/tmp/fsdist/fs.cpio
#
echo "Compressing archive"
/usr/bin/X11/compress /tmp/fsdist/fs.cpio
#
echo "Copying installation scripts"
cd /usr2/fs/backup
find *.82 -print |cpio -pmdu /tmp/fsdist
#
echo "Removing file list"
rm -rf /tmp/fsdist/FSS

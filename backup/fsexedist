# Make archive of executables for distribution, for root only
#
echo "Clearing /tmp/bin"
rm -rf /tmp/bin
#
echo "Copying executables to /tmp/bin"
cd /usr2/fs
find bin -print |cpio -pmduv /tmp
#
echo "Stripping executables"
cd /tmp/bin
strip * 
#
echo "Removing /tmp/fsexe.tar*"
rm -rf /tmp/fsexe.tar*
#
echo "Making tar archive"
ulimit 409600
cd /tmp
tar -cvf /tmp/fsexe.tar bin
#
echo "Compressing archive"
/usr/bin/X11/compress /tmp/fsexe.tar
#
echo "Making Floppies"
tar -cvfkb /dev/dsk/f0q18dt 1400 10 /tmp/fsexe.tar.Z
#
echo "Done."

FTN77,I,Y
$CDS ON
$ALIAS /FSCOM/ , NOALLOCATE
$ALIAS RNRQ,noabort
  
      LOGICAL FUNCTION KBOSS()
C
      INCLUDE /FS/INCLUDE/FSCOM.FTNI
C
      INTEGER*2 ISTAT
C
C     This routine returns the status of BOSS based on the resource
C     allocation variable IRNBOSS_FS.
C
C  WHO  WHEN    DESCRIPTION
C  GAG  901226  Created.
C
      KBOSS=.FALSE.
      CALL RNRQ(140002B,IRNBOSS_FS,ISTAT,*888)
888   KBOSS=(ISTAT.EQ.7) ! requested RN is locked globally,BOSS is running
C
C
      RETURN
      END

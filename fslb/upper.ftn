FTN77,I,Y
$CDS ON
      SUBROUTINE UPPER(IBUF,IFC,ILC)
      IMPLICIT NONE
      INTEGER*2 IBUF(1),IFC,ILC
      INTEGER*2 NCHAR,I
      CHARACTER CH
 
      NCHAR = ILC - IFC + 1
      IF (NCHAR.LE.0) RETURN
      DO I=IFC,NCHAR
        CALL HOL2CHAR(IBUF,I,I,CH)
        CALL CASEFOLD(CH)
        CALL CHAR2HOL(CH,IBUF,I,I)
      ENDDO
      RETURN
      END

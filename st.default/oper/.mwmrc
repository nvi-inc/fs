#  mwm RESOURCE DESCRIPTION FILE .mwmrc

#
# menu pane descriptions
#

# Root Menu Description
Menu RootMenu
{
	"Root Menu"		f.title
	"New Window"		f.exec "xterm -ls -g 80x24+75+75 -rw &"
	"Shuffle Up"		f.circle_up
	"Shuffle Down"		f.circle_down
	"Refresh"		f.refresh
	no-label		f.separator
	"Utilities"		f.menu UtilitiesMenu
	no-label		f.separator
	"Restart..."		f.restart
}

# Oppgm Menu of Operator Programs

Menu OppgmMenu
{
	"Operator Menu"		f.title
	"Monit: time    Alt-1"	f.exec "xterm -name monit1 -e /usr2/fs/bin/monit1 &"
	"Monit: status  Alt-2"	f.exec "xterm -name monit2 -e /usr2/fs/bin/monit2 &"
	"Monit: Tsys    Alt-3"	f.exec "xterm -name monit3 -e /usr2/fs/bin/monit3 &"
        "Chekr          Alt-C"  f.exec "/usr2/fs/bin/run chekr w &"
	"Logex          Alt-L"	f.exec "xterm -name logex -e /usr2/fs/bin/logex &"
	"Pfmed          Alt-P"	f.exec "xterm -name pfmed -e /usr2/fs/bin/pfmed &"
        "Rwand          Alt-R"  f.exec "xterm -name rwand -e /usr2/fs/bin/rwand &"
        "Setcl          Alt-S"  f.exec "/usr2/fs/bin/setcl &"
	"Fmset          Alt-T"	f.exec "xterm -name fmset -e /usr2/fs/bin/fmset  &"
	"New Window     Alt-W"  f.exec "xterm -ls -g 80x24+75+75 -rw &"
}

# Utilities 

Menu UtilitiesMenu
{
	"Utilities Menu"	f.title
	"Clock"			f.exec "xclock &"
	"Calculator"		f.exec "xcalc &"
	"System Load"		f.exec "xload &"
}

# Default Window Menu Description

Menu DefaultWindowMenu
{
	Restore		_R	Alt<Key>F5	f.normalize
	Move		_M	Alt<Key>F7	f.move
	Size		_S	Alt<Key>F8	f.resize
	Minimize	_n	Alt<Key>F9	f.minimize
	Maximize	_x	Alt<Key>F10	f.maximize
	Lower		_L	Alt<Key>F3	f.lower
	no-label				f.separator
	Close		f.kill
}


#
# key binding descriptions
#

Keys DefaultKeyBindings
{
	Shift<Key>Escape	window|icon		f.post_wmenu
	Meta<Key>space		window|icon		f.post_wmenu
	Meta<Key>L		root|window		f.exec "xterm -name logex -e /usr2/fs/bin/logex&"
	Meta<Key>P		root|window		f.exec "xterm -name pfmed -e /usr2/fs/bin/pfmed&"
	Meta<Key>S		root|window		f.exec "/usr2/fs/bin/setcl&"
	Meta<Key>T		root|window		f.exec "xterm -name fmset -e /usr2/fs/bin/fmset &"
	Meta<Key>R		root|window		f.exec "xterm -name rwand -e /usr2/fs/bin/rwand&"
	Meta<Key>C	root|window	f.exec "/usr2/fs/bin/run chekr w &"
	Meta<Key>W      root|window     f.exec "xterm -ls -g 80x24+75+75 -rw &"
	Meta<Key>1	root|window	f.exec "xterm -name monit1 -e /usr2/fs/bin/monit1 &"
	Meta<Key>2	root|window	f.exec "xterm -name monit2 -e /usr2/fs/bin/monit2 &"
	Meta<Key>3	root|window	f.exec "xterm -name monit3 -e /usr2/fs/bin/monit3 &"
	Meta<Key>Tab	root|window	root|icon|window	f.next_key
	Meta Shift<Key>Tab	root|icon|window	f.prev_key
	Meta<Key>Escape		root|icon|window	f.next_key window
	Meta Shift<Key>Escape	root|icon|window	f.prev_key
	Meta Shift Ctrl<Key>exclam root|icon|window	f.set_behavior
	Meta<Key>F6		window			f.next_key transient
	Meta Shift<Key>F6	window			f.prev_key transient
	    <Key>F4		icon			f.post_wmenu
}

#
# button binding descriptions
#

Buttons DefaultButtonBindings
{
	<Btn1Down>	icon|frame	f.raise
	<Btn3Down>	icon		f.post_wmenu
	<Btn1Down>	root		f.menu	RootMenu
	<Btn2Down>	root		f.menu	OppgmMenu
}
 
Buttons ExplicitButtonBindings
{
	<Btn1Down>	frame|icon	f.raise
	<Btn3Down>	frame|icon	f.post_wmenu
	<Btn1Down>	root		f.menu	RootMenu
	<Btn3Down>	root		f.menu	OppgmMenu
	Meta<Btn1Down>	window|icon	f.lower
	Meta<Btn2Down>	window|icon	f.resize
	Meta<Btn3Down>	window|icon	f.move

}
 
Buttons PointerButtonBindings
{
	<Btn1Down>	frame|icon	f.raise
	<Btn3Down>	frame|icon	f.post_wmenu
	<Btn1Down>	root		f.menu	RootMenu
	<Btn3Down>	root		f.menu	OppgmMenu
	<Btn1Down>	window		f.raise
	Meta<Btn1Down>	window|icon	f.lower
	Meta<Btn2Down>	window|icon	f.resize
	Meta<Btn3Down>	window|icon	f.move
}

#
#  END OF mwm RESOURCE DESCRIPTION FILE
#
